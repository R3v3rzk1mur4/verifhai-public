{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/permissions.json",
  "_comment": "Verifhai Claude Code permissions - explicit allow-list, NOT bypassPermissions",
  "permissions": {
    "allow": [
      "Bash(verifhai *)",
      "Bash(python3 *)",
      "Bash(python *)",
      "Bash(pip list)",
      "Bash(pip show *)",
      "Bash(git status)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(semgrep *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(pytest *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(wc *)",
      "Bash(find *)",
      "Bash(grep *)",
      "Bash(sort *)",
      "Bash(uniq *)",
      "Bash(diff *)",
      "Bash(mkdir *)",
      "Bash(cp *)",
      "Bash(mv *)",
      "Bash(rm *.pyc)",
      "Bash(rm -r __pycache__)",
      "Read(*)",
      "Write(/workspace/**)",
      "Write(/tmp/**)",
      "Edit(/workspace/**)",
      "Glob(*)",
      "Grep(*)"
    ],
    "deny": [
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Bash(apt *)",
      "Bash(apt-get *)",
      "Bash(npm install *)",
      "Bash(pip install *)",
      "Bash(chmod +s *)",
      "Bash(chown *)",
      "Bash(mount *)",
      "Bash(umount *)",
      "Bash(iptables *)",
      "Bash(ip *)",
      "Bash(nc *)",
      "Bash(ncat *)",
      "Bash(nmap *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(rsync *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(fdisk *)",
      "Bash(kill -9 1)",
      "Bash(reboot)",
      "Bash(shutdown *)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Write(/opt/**)",
      "Write(/usr/**)",
      "Write(/etc/**)",
      "Edit(/opt/**)",
      "Edit(/usr/**)",
      "Edit(/etc/**)"
    ]
  }
}
